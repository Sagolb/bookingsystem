  <body>
    <!-- <img src="assets/kobe.jpg" alt="basketball" width="100%" height="100%"> -->
    <div class="b">
      <section class="box">
          <div class="design">
              <div></div>
              <div></div>
              <div></div>
              <div></div>
          </div>
          <div class="form">
              <h2>Book your court</h2>
              
<form action="" method="POST">
  <input type="hidden" name="id" >
  <input type="time" name="Start_time" class="input-field1"placeholder="Start_time" required>
  <input type="time" name="End_time" class="input-field2"placeholder="End_time" required>
  <input type="text" name="court_type" class="input-field1"placeholder="court_type" required>
  <input type="text" name="court_location" class="input-field2" placeholder="court_location" required>
  <button type="submit" class="btn">Submit</button>
  </div>
</form>
  
          </div>
      </section>
    </div>
    <table>
        <tr>
            <th>id</th>
            <th>Start_time</th>
            <th>End_time</th>
            <th>court_type</th>
            <th>court_location</th>
            <th>Action</th>
        </tr>
         <% if(timetable.length > 0){ %>
            <% for(var i=0; i<timetable.length; i++){ %>
                <tr>
                    <!-- <td><%= timetable[i].id %></td> -->
                    <td></td>
                    <td></td>
                    <td></td>
                    <!-- <td><%= timetable[i].available_time %></td> -->
                    <td><%= timetable[i].court_type %></td>
                    <td><%= timetable[i].court_location %></td>
                    <td><%= timetable[i].ScheduledlArrivalTime %> </td>
                </tr>
            <% } %>

        <% }else{ %>
            <h1>no </h1>

        <% } %>
    </table>    
    <script>
      $('.toggle').click(function () {
        "use strict";
        $('nav ul').slideToggle();
    });
    
    
    
    $(window).resize(function () {
        "use strict";
        if ($(window).width() > 780) {
            $('nav ul').removeAttr('style');
        }
    });
    </script>
  </body>
